<!-- CART POPUP -->
<div id="cartModal">
  <div id="cartContent">
    <h3>Your Cart</h3>
    <ul id="cartItems"></ul>
    <button class="btn buy" onclick="checkout()">Checkout / Buy Now</button>
    <button class="btn add" onclick="closeCart()">Close</button>
  </div>
</div>

<script>
let cart = [];

function addToCart(product){
  cart.push(product);
  document.getElementById("cartCount").innerText = cart.length;
  alert(product + " added to cart");
}

function openCart(){
  let list = "";
  cart.forEach((item, i)=>{
    list += "<li>"+(i+1)+". "+item+"</li>";
  });
  document.getElementById("cartItems").innerHTML = list;
  document.getElementById("cartModal").style.display="block";
}

function closeCart(){
  document.getElementById("cartModal").style.display="none";
}

function buyNow(product){
  cart = [product];
  checkout();
}

function checkout(){
  if(cart.length==0){
    alert("Cart is empty");
    return;
  }
  let msg = "Hello, I want to order:\n";
  cart.forEach((p,i)=>{
    msg += (i+1)+". "+p+"\n";
  });
  window.open("https://wa.me/919651719981?text="+encodeURIComponent(msg));
}
</script>

